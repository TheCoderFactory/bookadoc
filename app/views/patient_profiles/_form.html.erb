<%= simple_form_for(@patient_profile) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <%= f.input :first_name %>
    </div>
    <div class="col-md-4">
      <%= f.input :last_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <%= f.input :phone %>
    </div>
    <div class="col-md-4">
      <%= f.input :medicare_number %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 col-md-offset-2">
      <%= f.input :address %>
    </div>
    <div class="col-md-2">
      <%= f.input :suburb %>
    </div>
    <div class="col-md-1">
      <%= f.input :state %>
    </div>
    <div class="col-md-1">
      <%= f.input :postcode %>
    </div>
    <div class="col-md-2">
      <%= f.input :country, priority: [ 'Australia', "New Zealand"] %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
